  "shortcuts": [
    {
      "name": "New Easy Game",
      "short_name": "Easy",
      "description": "Start a new easy difficulty game",
      "url": "./?difficulty=easy",
      "icons": [
        {
          "src": "icons/easy-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Hard Game", 
      "short_name": "Hard",
      "description": "Start a new hard difficulty game",
      "url": "./?difficulty=hard",
      "icons": [
        {
          "src": "icons/hard-shortcut.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Statistics",
      "short_name": "Stats", 
      "description": "View your game statistics",
      "url": "./?view=stats",
      "icons": [
        {
          "src": "icons/stats-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+sudoku",
      "url": "./?puzzle=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "application/json": [".sudoku", ".puzzle"]
      }
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "puzzle",
          "accept": ["application/json", ".sudoku"]
        }
      ]
    }
  }
}